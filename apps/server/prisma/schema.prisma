generator client {
  provider = "prisma-client"
  output   = "../prisma/client"
}

datasource db {
  provider  = "postgresql"

}

model Users {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  userName  String   @unique
  hash      String
  role      Role     @default(USER)
  hashedRt  String?

  @@map("users")
}

enum Role {
  ADMIN
  EDITOR
  USER
}
